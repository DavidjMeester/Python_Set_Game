class Set:
    colors = ['red', 'green', 'purple']
    symbols = ['oval', 'squiggle', 'diamond']
    shadings = ['filled', 'shaded', 'empty']
    numbers = ['1', '2', '3']

    def __init__(self, name):
        self.name = name.lower()
        self.features = self.parse_name_to_features(self.name)

    def parse_name_to_features(self, name):
        # Find color
        color_idx = next(i for i, c in enumerate(self.colors) if c in name)

        # Find symbol
        symbol_idx = next(i for i, s in enumerate(self.symbols) if s in name)

        # Find shading
        shading_idx = next(i for i, sh in enumerate(self.shadings) if sh in name)

        # Find number
        number_char = name[-1]
        number_idx = int(number_char) - 1
        return [color_idx, symbol_idx, shading_idx, number_idx]

    def __repr__(self):
        return str(self.features)
